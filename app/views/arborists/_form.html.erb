<%= form_with(model: arborist, class: "contents") do |form| %>
  <% if arborist.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(arborist.errors.count, "error") %> prohibited this arborist from being saved:</h2>

      <ul>
        <% arborist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :isa_certified %>
    <%= form.check_box :isa_certified, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :etv_certified %>
    <%= form.check_box :etv_certified, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :zipcode %>
    <%= form.number_field :zipcode, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :skills %>
    <%= form.text_field :skills, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
